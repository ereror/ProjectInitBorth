.address_noaddr {
  position: relative;
  margin: 319rpx 70rpx;
  width: 610rpx;
  height: 440rpx;
  overflow: hidden;
}
.address_noaddr .address_noaddr_bg {
  position: absolute;
  z-index: -1;
  width: 610rpx;
  height: 440rpx;
  top: 0;
  left: 0;
}
.address_noaddr .address_noaddr_text {
  margin-top: 313rpx;
  margin-left: 238rpx;
  font-weight: 600;
  color: #7a7a7a;
  font-size: 34rpx;
}
.address_add {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 10;
  background: #ffffff;
  box-shadow: 0px -2px 16px rgba(128, 128, 128, 0.16);
}
.address_add .address_add_btn {
  width: 702rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(-90deg, #ff5e97, #ff9999);
  border-radius: 44px;
  margin: 20rpx 24rpx;
  font-size: 32rpx;
  color: white;
}
.address_box {
  padding: 21rpx 24rpx;
}
.goleft {
  transform: translateX(-320rpx);
}
.goleft2 {
  transform: translateX(-160rpx);
}
.address_item {
  position: relative;
  height: 180rpx;
  border-left: 8rpx solid #ff5e97;
  border-radius: 10rpx;
  margin-bottom: 24rpx;
  background: white;
  box-shadow: 0px 3px 16px rgba(128, 128, 128, 0.1);
  padding: 0 30rpx 0 38rpx;
  overflow: hidden;
}
.address_item .address_item_detail {
  flex: 1;
  line-height: 1;
  transition: all .2s;
}
.address_item .address_item_detail .address_item_users_msg .address_item_users_name,
.address_item .address_item_detail .address_item_users_msg .address_item_users_phone {
  font-size: 32rpx;
  font-weight: 600;
}
.address_item .address_item_detail .address_item_users_msg .address_item_users_phone {
  margin-left: 45rpx;
}
.address_item .address_item_detail .address_item_users_msg .address_item_users_tags {
  margin-left: 23rpx;
  width: 74rpx;
  height: 28rpx;
  background: linear-gradient(-45deg, #ff5e97, #ff9999);
  border-radius: 14rpx;
  color: white;
  font-size: 20rpx;
  text-align: center;
  line-height: 28rpx;
}
.address_item .address_item_detail .address_item_adrr {
  font-size: 24rpx;
  margin-top: 17rpx;
  line-height: 1.5;
}
.address_item .addr-icon {
  margin-left: 63rpx;
  font-size: 42rpx;
  transition: all .2s;
}
.address_item .address_opt_box {
  position: absolute;
  top: 0;
  right: 0;
  z-index: 2;
  width: 0rpx;
  font-size: 24rpx;
  font-weight: 600;
  overflow: hidden;
  transition: all .2s;
  height: 180rpx;
}
.address_item .address_opt_box_an {
  width: 320rpx;
}
.address_item .address_opt_box_an2 {
  width: 160rpx;
}
.address_item .address_opt_box_szmr {
  width: 180rpx;
  background: #F7F8FA;
  height: 100%;
  line-height: 180rpx;
  text-align: center;
}
.address_item .address_opt_box_del {
  width: 160rpx;
  background: #E9351E;
  height: 100%;
  line-height: 180rpx;
  color: white;
  text-align: center;
}
.address_item_gray {
  border-left: 8rpx solid #e0dcdc;
}
