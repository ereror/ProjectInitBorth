.messageitem {
    width: 100%;
    padding-bottom: 20rpx;
    /* overflow: hidden; */
}

/* 时间间隔过久 */

.messageitem_overtime {
    width: 100%;
    height: 108rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #999;
    font-size: 26rpx;
}

/* 对方 */

.messageitem_you {
    width: 730rpx;
    margin: 0 auto;
    display: flex;
}

.messageitem_you_header {
    width: 120rpx;
    display: flex;
    justify-content: center;
}

.messageitem_you_header>view {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    overflow: hidden;
    background-color: #f2f2f2;
}

.messageitem_you_header>view>image {
    width: 80rpx;
    height: 80rpx;
}

.messageitem_you_meg {
    color: rgba(102, 102, 102, 1);
    line-height: 38rpx;
    font-size: 34rpx;
    background: rgba(239, 239, 239, 1);
    max-width: 520rpx;
    border-top-left-radius: 24rpx;
    border-top-right-radius: 24rpx;
    border-bottom-right-radius: 24rpx;
    /* overflow: hidden; */
    padding: 30rpx;
    position: relative;
}

.messageitem_you_meg_ly {
    display: inline-block;
    width: 0;
    height: 0;
    vertical-align: middle;
    border-left: 20rpx solid rgba(239, 239, 239, 1);
    /* rgba(239, 239, 239, 1) */
    border-right: 20rpx solid transparent;
    border-bottom: 20rpx solid transparent;
    position: absolute;
    bottom: -18rpx;
    left: 0;
}

.messageitem_me {
    width: 690rpx;
    /* overflow: hidden; */
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
}

.messageitem_me_meg {
    color: #fff;
    line-height: 38rpx;
    font-size: 34rpx;
    background: #6267f9;
    max-width: 520rpx;
    border-top-left-radius: 24rpx;
    border-top-right-radius: 24rpx;
    border-bottom-left-radius: 24rpx;
    /* overflow: hidden; */
    padding: 30rpx;
    position: relative;
}

.messageitem_me_meg_ly {
    float: right;
    display: inline-block;
    width: 0;
    height: 0;
    vertical-align: middle;
    border-right: 20rpx solid transparent;
    border-right: 20rpx solid #6267f9;
    border-bottom: 20rpx solid transparent;
    position: absolute;
    right: 0;
    bottom: -18rpx;
}

.messageitem_you, .messageitem_me {
    margin-bottom: 10rpx;
}

rich-text{
    word-break: break-all;
    line-height: 38rpx;
}