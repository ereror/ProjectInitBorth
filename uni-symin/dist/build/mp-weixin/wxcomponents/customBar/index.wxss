.cu-custom {
  display: block;
  position: relative;
  z-index: 10000;
}

.bg-gradual-default {
  background-color: white;
  color: #333333;
}


.bg-gradual-dred {
  background-color: #f81f5e;
  color: white;
}

.bg-gradual-transparent {
	background-color: rgba(255, 255, 255, 0);
	color: #333333;
}

