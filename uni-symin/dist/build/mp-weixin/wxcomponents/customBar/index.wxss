.cu-custom .cu-bar {
  min-height: 0px;
  display: flex;
  justify-content: flex-start;
}

.cu-bar.fixed,
.nav.fixed {
  position: fixed;
  width: 100%;
  top: 0;
  z-index: 1024;
  /* box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1); */
}

.cu-bar {
  display: flex;
  position: relative;
  align-items: center;
  min-height: 100rpx;
  justify-content: space-between;
}

.cu-bar .action:last-child {
  margin-right: 30rpx;
}

.cu-bar .action:first-child {
  font-size: 32rpx;
}

.action>view{
  width: 32rpx;
}

.cu-bar .action {
  display: flex;
  align-items: center;
  height: 100%;
  width: 100rpx;
  max-width: 100%;
}


.cu-bar .action:first-child>text {
  margin-left: -0.3em;
  margin-right: 0.3em;
}

.cu-custometitle {
  position: absolute;
  width: 750rpx;
  line-height: 1;
  text-align: center;
  color: rgba(0, 0, 0, 1);
/*  font-weight: bold; */
  font-size: 32rpx;
  z-index: -2;
  -webkit-background-clip:text;
}

.icon-180d {
  transform: rotate(-180deg)
}

.actionimage1 {
  width: 32rpx;
  height: 32rpx;
}

.actionimage2 {
  width: 24rpx;
  height: 35rpx;
}

.action{
  width: 200rpx!important;
}

