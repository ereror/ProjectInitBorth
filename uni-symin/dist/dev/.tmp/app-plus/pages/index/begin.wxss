.be-sex {
		position: relative;
		margin: 100rpx auto 0;
		width: 522rpx;
		height: 522rpx;
}
.be-sex::before {
		display: block;
		content: ' ';
		position: absolute;
		z-index: -1;
		bottom: 0;
		top: 0rpx;
		left: 0rpx;
		width: 100%;
		height: 100%;
		border-radius: 50% 50% 60% 40%;
		background: #e8f1f8;
}
