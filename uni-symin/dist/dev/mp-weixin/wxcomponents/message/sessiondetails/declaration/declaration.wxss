.declaration {
    width: 100%;
    height: 100vh;
    background-color: rgba(255, 255, 255, .5);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99999;
    display: flex;
    align-items: center;
    justify-content: center;
}

.declaration>view {
    width: 540rpx;
    height: 762rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 30rpx;
    box-shadow: 0 0 40rpx rgba(00, 00, 00, .4);
    overflow: hidden;
    position: relative;
}

.declaration_content {
    width: 100%;
    height: 110rpx;
    text-align: center;
    padding-top: 40rpx;
    overflow: hidden;
    color: #333333;
    font-size: 36rpx;
    font-weight: 600;
}

.declaration_exe {
    width: 100%;
    height: 80rpx;
    text-align: center;
    color: #999999;
    font-size: 28rpx;
    font-weight: 600;
}

.declaration_item {
    width: 100%;
    display: flex;
    margin-bottom: 20rpx;
}

.declaration_itemnth {
    margin-bottom: 0rpx;
}

.declaration_item_d {
    width: 64rpx;
    height: 40rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.declaration_item_d>view {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    background-color: #F81F5E;
}

.declaration_item_t {
    width: 452rpx;
    color: #333333;
    font-size: 26rpx;
    font-weight: 400;
}

.declaration_item_t>text {
    line-height: 40rpx;
}

.declaration_item_z {
    width: 34rpx;
}

.declaration_button {
    width: 420rpx;
    height: 88rpx;
    border-radius: 44rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    font-size: 32rpx;
    color: #FFFFFF;
    position: absolute;
    left: 60rpx;
    bottom: 104rpx;
}

.declaration_button_yes {
    background: rgba(248, 31, 94, 1);
}

.declaration_button_yes:active {
    opacity: .7;
}

.declaration_button_no {
    background-color: #999999;
}

.declaration_button_back {
    width: 100%;
    height: 84rpx;
    text-align: center;
    font-size: 32rpx;
    color: #999999;
    position: absolute;
    left: 0;
    bottom: 0;
}