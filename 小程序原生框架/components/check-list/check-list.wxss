
.cells {
  background-color: #FFFFFF;
  line-height: 1.7;
  font-size: 28rpx;
  overflow: hidden;
  padding-left: 30rpx;
  position: relative;
}
.cells:before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #d9d9d9 solid;
  box-sizing: border-box;
  transform-origin: 0 0;
  transform: scale(0.33333333);
  pointer-events: none;
  z-index: 0;
  border-top-width: 1px;
  border-bottom-width: 1px;
}
.cell {
  position: relative;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 90rpx;
}
.cell.cell__label-left {
  flex-direction: row-reverse;
}
.cell:not(:first-child) {
  position: relative;
}
.cell:not(:first-child):before {
  content: "";
  position: absolute;
  left: 0;
  top: 0;
  width: 300%;
  height: 300%;
  border: 0 #d9d9d9 solid;
  box-sizing: border-box;
  transform-origin: 0 0;
  transform: scale(0.33333333);
  pointer-events: none;
  z-index: 0;
  border-top-width: 1px;
}
.cell .cell_bd {
  flex: 1;
}
.cell .inline-desc {
  color: #666;
  font-size: 28rpx;
}
.ui-checkbox-inner {
  margin-left: 12rpx;
  margin-right: 12rpx;
  box-sizing: border-box;
  display: inline-block;
  vertical-align: middle;
  position: relative;
  width: 20px;
  height: 20px;
  border: 1px solid #c0ccda;
  border-radius: 6rpx;
  background-color: #fff;
  z-index: 1;
  transition: border-color 0.25s cubic-bezier(0.71, -0.46, 0.29, 1.46), background-color 0.25s cubic-bezier(0.71, -0.46, 0.29, 1.46);
}
.ui-checkbox-inner.is-disabled {
  background-color: #eff2f7;
  border-color: #D3DCE6;
}
.ui-checkbox-inner.is-disabled.is-checked {
  background-color: #D3DCE6;
  border-color: #D3DCE6;
}
.ui-checkbox-inner.is-disabled.is-checked .ui-checkbox__check {
  border-color: #fff;
}
.ui-checkbox-inner.is-disabled.is-checked.ui-checkbox-inner__plain .ui-checkbox__check {
  border-color: #eff2f7;
}
.ui-checkbox-inner.is-checked {
  background-color: #3399ff;
  border-color: #3399ff;
}
.ui-checkbox-inner.is-checked .ui-checkbox__check {
  border-color: #fff;
  transform: rotate(45deg) scaleY(1);
}
.ui-checkbox-inner.is-checked.ui-checkbox-inner__plain {
  background-color: transparent;
}
.ui-checkbox-inner.ui-checkbox-inner__circle {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
.ui-checkbox-inner.ui-checkbox-inner__plain {
  border: 0;
  background-color: transparent;
}
.ui-checkbox-inner.ui-checkbox-inner__plain.is-checked .ui-checkbox__check {
  border-color: #3399ff;
}
.ui-checkbox__check {
  box-sizing: content-box;
  position: absolute;
  top: 4rpx;
  left: 12rpx;
  content: "";
  height: 16rpx;
  width: 8rpx;
  border: 2px solid #fff;
  border-left: 0;
  border-top: 0;
  transform: rotate(45deg) scaleY(0);
  transition: transform 0.15s cubic-bezier(0.71, -0.46, 0.88, 0.6) 0.05s;
  transform-origin: center;
}
.ui-checkbox-inner__circle .ui-checkbox__check {
  top: 6rpx;
  left: 14rpx;
  height: 14rpx;
  width: 6rpx;
}
.ui-checkbox-inner__plain .ui-checkbox__check {
  height: 24rpx;
  width: 12rpx;
  transition: transform 0.15s;
}
